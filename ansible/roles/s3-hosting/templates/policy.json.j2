{
  "Version": "2012-10-17",
  "Id": "S3PolicyId1",
  "Statement": [
    {
      "Sid": "IPAllow",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::{{dyn_bucket_name}}/*",
      "Condition": {
         "IpAddress": {"aws:SourceIp": "{{service_allow_cidr}}"},
      } 
    } 
  ]
}
